<h1>All Users</h1>

<div class="search-bar">
  <% if @q %>
    <%= search_form_for @q do |f| %>

      <%= f.label :email_cont, "Search Users by Email" %>
      <%= f.search_field :email_cont %>

      <%= f.submit %>
    <% end %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= user.email %></td>
        <td><strong>Admin: </strong><%= user.user_detail.super_user %></td>
        <td><strong>Communications Manager: </strong><%= user.user_detail.comms_mngr %></td>
        <td>| <%= link_to 'Manage User', edit_user_detail_path(user.user_detail) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>