<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Permissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.user_detail %></td>
        <td><%= render 'user_details/access_level_form', user_detail: user.user_detail, index: index %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>