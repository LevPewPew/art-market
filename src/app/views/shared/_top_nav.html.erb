<header class="header">
  <nav>
    <div class="top-links">
      <div class="left-links">
        <div class="company-name">
          <%= link_to 'Art Haus', root_path %>
        </div>
        <% if !current_user.nil? && current_user.user_detail.super_user %>
          <%= link_to 'Admin Dashboard', admin_dashboard_path %>
        <% end %>
        <%= link_to 'Listing New', new_listing_path %>
      </div>
      <div class="right-links">
        <% if user_signed_in? %>
          <%= link_to "Settings", edit_user_detail_path(current_user.user_detail) %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Sign In/Up", new_user_session_path %>
        <% end %>
      </div>
    </div>
    <div class="bottom-links">
      <div class="center-links">
        <%= link_to 'Browse Art', listings_path %>
        <% if user_signed_in? %>
          <%= link_to 'My Listings', my_listings_path %>
          <%= link_to 'My Purchases', my_purchases_path %>
          <%= link_to 'My Sales', my_sales_path %>
        <% end %>
      </div>
    </div>
  </nav>
</header>